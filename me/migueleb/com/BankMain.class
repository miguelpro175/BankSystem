package me.migueleb.com;

import org.bukkit.plugin.java.JavaPlugin;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;

public class BankMain extends JavaPlugin implements Listener {
    @Override
    public void onEnable() {
        getServer().getPluginManager().registerEvents(this, this);
        getLogger().info("Bank habilitado.");
    }

    @Override
    public void onDisable() {
        getLogger().info("Bank desabilitado.");
    }

    @Override
    public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
        if (!(sender instanceof Player)) {
            sender.sendMessage("Apenas jogadores podem usar esse comando.");
            return true;
        }
        Player p = (Player)sender;
        if (cmd.getName().equalsIgnoreCase("bank")) {
            p.sendMessage("Plugin Bank ativo - comando base executado.");
        }
        return true;
    }
}
